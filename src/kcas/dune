;; Linearizability tests of the kcas library

(env
 (_
  (binaries
   (../check_error_count.exe as check_error_count))))


(executable
 (name lin_tests)
 (modules lin_tests)
 (flags (:standard -w -27))
 (libraries util qcheck lin kcas)
 (preprocess (pps ppx_deriving_qcheck ppx_deriving.show)))

(rule
 (alias runtest)
 (deps lin_tests.exe %{bin:check_error_count})
 (action
   (progn
    (with-accepted-exit-codes 1
      (with-stdout-to "lin-output.txt" (run ./lin_tests.exe --no-colors --verbose)))
    (cat lin-output.txt)
    (run %{bin:check_error_count} "lin_tests" 1 lin-output.txt))))
