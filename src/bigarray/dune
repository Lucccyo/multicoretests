;; Test of the Bigarray module of the standard library

;; this prevents the tests from running on a default build

(alias
 (name default)
 (package multicoretests)
 (deps lin_tests_dsl.exe))

(executable
 (name lin_tests_dsl)
 (modules lin_tests_dsl)
 (libraries multicorecheck.lin))

(executable
 (name stm_tests)
 (modules stm_tests)
 (libraries STM)
 (preprocess
  (pps ppx_deriving.show ppx_deriving.eq)))

(rule
 (alias runtest)
 (package multicoretests)
 (deps lin_tests_dsl.exe)
 (action
  (run ./%{deps} --no-colors --verbose)))
